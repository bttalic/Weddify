<%= provide(:title, 'Registracija') %>



<div class="registration-form" style='position:relative; left:20%'>
	<h1 style="text-align:center">Prijava</h1>

	<%= form_for @user, :url => users_path, :html => { :multipart => true } do |f| %>
	<legend>
		<%= render 'shared/error_messages', object: f.object %>
	</legend>
</br>

<center>
	<table>
		<tbody>
			<tr> <td> <%= f.label :name_groom %> </td> <td> <%= f.label :name_bride %> </td> </tr>
			<tr> <td><%= f.text_field :name_groom %>  </td> <td> <%= f.text_field :name_bride %> </td> </tr>
			<tr> <td> <%= f.label :last_name %> </td> </tr>
			<tr> <td> <%= f.text_field :last_name %> </td> </tr>
			<tr> <td> <%= f.label :email_groom %> </td> <td> <%= f.label :email_bride %> </td> </tr>
			<tr> <td> <%= f.text_field :email_groom %>  </td> <td> <%= f.text_field :email_bride %> </td> </tr>
			<tr> <td> <%= f.label :password %> </td> <td> <%= f.label :password_confirmation %> </td> </tr>
			<tr> <td> <%= f.password_field :password %> </td> <td> 	<%= f.password_field :password_confirmation %> </td> </tr>
			<tr> <td> <%= f.label :avatar %> </td> </tr>
			<tr> <td> <div class='btn btn-default' id='file_picker_registration_interface'> Izaberi Sliku </div> <%= f.file_field :avatar, class: 'hidden', id: 'file_picker_registration' %> </td> </tr>
		</tbody>
	</table>
</center>

<%= f.submit "Kreiraj Račun", class: "btn btn-default btn-large btn-block" %>
<% end %>
</div>


