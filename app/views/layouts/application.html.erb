	</head>

	<body class='home' >


			<% if current_page?(root_url) || current_page?('/signin') || current_page?('/signup') %>
			<%= render 'layouts/carosel' %>
			<% end %>
			<%= render 'layouts/header' %>




			<% flash.each do |key, value| %>
			<%= content_tag(:div, value, class: "alert alert-#{key}") %>
			<% end %>
			<%= yield %>

			<%= render 'layouts/footer' %>

		</body>
		</html>