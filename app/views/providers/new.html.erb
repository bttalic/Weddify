<%= provide(:title, 'Sign up') %>
<h1>Sign up</h1>
<div class="row">
	<div class="span6 offset3">
		<%= form_for @provider, :url => providers_path, :html => { :multipart => true } do |f| %>
		<%= render 'shared/error_messages', object: f.object %>
		<%= f.label :name %>
		<%= f.text_field :name %>
		<%= f.label :email %>
		<%= f.text_field :email %>
		<%= f.label :password %>
		<%= f.password_field :password %>
		<%= f.label :password_confirmation, "Confirmation" %>
		<%= f.password_field :password_confirmation %>
		<%= f.label :category %>
		<%= f.select(:category, options_for_select( [ [category_to_string(1), 1] , [category_to_string(2), 2], [category_to_string(3), 3], [category_to_string(4), 4]  ]  )) %>
		<%= f.file_field :avatar %>
	</br>
		<%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
</div>