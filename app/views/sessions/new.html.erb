<% provide(:title, "Sign in") %>

<section class='features'>
<div class='container'>

	<div class="registration-form">
		<h1><%= t '.signin' %></h1>
		<%= form_for(:session, url: sessions_path, :html => {:class => "form-horizontal"} ) do |f| %>
		<div class="form-group">
			<%= f.label t(".email") %>
			<div class="col-lg-10">
				<%= f.text_field :email, :class => "form-control" %>
			</div>
		</div>
	</br>

	<div class="form-group">
		<%= f.label t('.password') %>
		<div class="col-lg-10">
			<%= f.password_field :password, :value=>@password, :class => "form-control" %>
		</div>
	</div>
	<%= f.submit t('.signin'), :class  => "btn btn-default btn-large btn-block" %>
	<% end %>


	<p style='margin-top:20px;' ><%= link_to( t('new_user') , signup_path, :class => 'alert alert-info') %> <%= link_to( t('wedding_guest') , signup_path, :class => 'alert alert-info') %> </p>

</div>
</div>
</section>